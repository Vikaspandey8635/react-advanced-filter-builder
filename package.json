  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/react-advanced-filter-builder.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/react-advanced-filter-builder/issues"
  },
  "homepage": "https://github.com/yourusername/react-advanced-filter-builder#readme",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "date-fns": "^3.0.0",
    "lucide-react": "^0.300.0",
    "react-select": "^5.8.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
