{
  "name": "react-advanced-filter-builder",
  "version": "1.0.0",
  "description": "A powerful React filter component with cascading dropdowns, interdependent API calls, and support for Fetch, Axios, and custom functions",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "react",
    "filter",
    "cascading-dropdown",
    "dependent-select",
    "typescript",
    "axios",
    "fetch",
    "filter-builder",
    "advanced-filter",
    "data-grid",
    "interdependent",
    "dynamic-dropdown",
    "hierarchical-select"
  ],
  "author": "Your Name <your.email@example.com>",
